@model Shopping.Models.RecoverPasswordViewModel
@{
    ViewData["Title"] = "Recuperación de Constraseña";
}

<!--Encabezado de Página-->
<div class="main-header d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 border-bottom ">
    <div class="col-lg-8">
        <h2>Recuperación de Constraseña</h2>
        <em>Ingrese el correo con el que se registró.</em>
    </div>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a asp-controller="Account" asp-action="Login" class="btn btn-primary"><i class="fal fa-arrow-left"></i> Salir</a>
        </div>
    </div>
</div>
<div class="text-success">
    <h2>
        @ViewBag.Message
    </h2>
</div>

<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-warning"></span>
            </div>

            <div class="form-group mt-2">
                <input type="submit" value="Recuperación de Contraseña" class="btn btn-outline-primary" />
                
            </div>
        </form>
        
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
