@model Shopping.Data.Entities.City

@{
    ViewData["Title"] = "Detalles";
}
<!--Encabezado de Página-->
<div class="main-header d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 border-bottom ">
    <div class="col-lg-8">
        <h2>Detalles Departamento / Estado</h2>
        <em>Detalles de un Departamento / Estado.</em>
    </div>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a asp-action="DetailsState" asp-route-id="@Model?.State.Id" class="btn btn-primary"><i class="fal fa-arrow-left"></i> Regresar</a>
        </div>
    </div>
</div>

<div>
    
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
      
    </dl>
    <div class="mt-2">
    <a asp-action="EditCity" asp-route-id="@Model?.Id" class="btn btn-outline-warning"><i class="fal fa-pencil"></i> Modificar Ciudad</a>
    
</div>