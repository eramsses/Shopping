@model Shopping.Models.StateViewModel
@{
    ViewData["Title"] = "Modificar";
}
<!--Encabezado de Página-->
<div class="main-header d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 border-bottom ">
    <div class="col-lg-8">
        <h2>Modificar Departamento/Estado</h2>
        <em>Modificar la información un departamento/estado.</em>
    </div>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a asp-action="Details" asp-route-id="@Model.CountryId" class="btn btn-primary"><i class="fal fa-arrow-left"></i> Regresar</a>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <form asp-action="EditState">
            <div class="row">
                <div class="col-md-4">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CountryId" />
                    <partial name="_State" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>
            </div>

            <div class="form-group mt-2">
                <button type="submit" value="Save" class="btn btn-outline-warning"><i class="fal fa-floppy-disk-pen"></i> Modificar</button>
            </div>
        </form>
    </div>
</div>

<div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}
