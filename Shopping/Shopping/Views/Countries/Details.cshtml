@model Shopping.Data.Entities.Country

@{
    ViewData["Title"] = "Detalles";
}
<!--Data Tables-->


<!--Encabezado de Página-->
<div class="main-header d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 border-bottom ">
    <div class="col-lg-8">
        <h2>Detalles</h2>
        <em>Detalles de un país.</em>
    </div>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a asp-action="Index" class="btn btn-primary"><i class="fal fa-arrow-left"></i> Regresar</a>
        </div>
    </div>
</div>

<div>
    
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StatesNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StatesNumber)
        </dd>
    </dl>
    <div class="mt-2">
    <a asp-action="AddState" asp-route-id="@Model?.Id" class="btn btn-outline-primary"><i class="fad fa-xl fa-circle-plus"></i> Agregar Departamento / Estado</a>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-warning"><i class="fal fa-pencil"></i> Modificar</a>
    
</div>
    <hr/>
    <div class="panel-body">
        <h4>Departamentos/Estados</h4>
            <table class="table table-hover table-responsive table-striped" id="MyTable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.States.FirstOrDefault().Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.States.FirstOrDefault().CitiesNumber)
                        </th>
                        <th>
                            Opciones
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.States)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                             <td>
                                @Html.DisplayFor(modelItem => item.CitiesNumber)
                            </td>
                            <td class="text-end">
                                <div class="dropdown">
                                    <a class="btn btn-outline-primary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-bs-toggle="dropdown" aria-expanded="false">
                                        Opciones
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-md-end" aria-labelledby="dropdownMenuLink">
                                        <li><a asp-action="EditState" asp-route-id="@item.Id" class="dropdown-item text-warning"><i class="fal fa-pencil"></i> Modificar</a></li>
                                        <li><a asp-action="DetailsState" asp-route-id="@item.Id" class="dropdown-item text-info"><i class="fal fa-table-list"></i> Detalles</a></li>
                                        <li><a asp-action="DeleteState" asp-route-id="@item.Id" class="dropdown-item text-danger"><i class="fal fa-trash-xmark"></i> Eliminar</a></li>
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }


<script type="text/javascript">
        $(document).ready( function () {
        $('#MyTable').DataTable({
            language: {
            url: 'https://cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json',
        },
        "lengthMenu": [
                [10, 50, 100, 200, -1],
                [10, 50, 100, 200, "Todos"]
            ]
        });
    } );
</script>
}

