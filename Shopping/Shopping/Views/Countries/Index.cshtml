@model IEnumerable<Shopping.Data.Entities.Country>

@{
    ViewData["Title"] = "Países";
}
<!--Data Tables-->
<link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" asp-append-version="true" />



<div class="row">
    <div class="col-12">

        <!--Encabezado de Página-->
        <div class="main-header d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 border-bottom ">
            <div class="col-lg-8">
                <h2>Países</h2>
                <em >Catálogo de países.</em>
            </div>
            <div class="btn-toolbar mb-2 mb-md-0">
                <div class="btn-group me-2">
                    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Agregar Nuevo País</a>
                </div>
            </div>
        </div>

        <div class="panel-body">
            <table class="table table-hover table-responsive table-striped" id="MyTable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning me-1"><i class="fal fa-pencil"></i> Modificar</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info me-1"><i class="fal fa-table-list"></i> Detalles</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger me-1"><i class="fal fa-trash-xmark"></i> Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>

<script type="text/javascript">
        $(document).ready( function () {
        $('#MyTable').DataTable({
            language: {
            url: 'https://cdn.datatables.net/plug-ins/1.11.5/i18n/es-ES.json',
        },
        "lengthMenu": [
                [5, 50, 100, 200, -1],
                [5, 50, 100, 200, "Todos"]
            ]
        });
    } );
</script>
}








