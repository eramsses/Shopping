@model Shopping.Data.Entities.Country

@{
    ViewData["Title"] = "Modificar";
}

<h1>Modificar</h1>

<h4>Modificar País</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <a asp-action="Index" class="btn btn-primary"><i class="fal fa-rotate-left"></i> Regresar</a>
                <button type="submit" value="Save" class="btn btn-outline-warning"><i class="fal fa-floppy-disk-pen"></i> Modificar</button>
            </div>
        </form>
    </div>
</div>

