@model Shopping.Data.Entities.State

@{
    ViewData["Title"] = "Eliminar";
}

<!--Encabezado de Página-->
<div class="main-header d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 border-bottom ">
    <div class="col-lg-8">
        <h2>Eliminar Departamento / Estado</h2>
        <em>Elimina un Departamento / Estado.</em>
    </div>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a asp-action="Details" asp-route-id="@Model?.Country.Id" class="btn btn-primary"><i class="fal fa-arrow-left"></i> Regresar</a>
        </div>
    </div>
</div>
<div>
    <h4>Confirme que desea eliminar el Departamento / Estado <b>@Html.DisplayFor(model => model.Name)</b>?</h4>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CitiesNumber)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CitiesNumber)
        </dd>
    </dl>
    <form asp-action="DeleteState">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Country" />
        <button type="submit" class="btn btn-outline-danger"><i class="fal fa-trash-xmark"></i> Eliminar</button>
        
    </form>
</div>
