@model Shopping.Data.Entities.Country

@{
    ViewData["Title"] = "Nuevo País";
}

<h1>Nuevo País</h1>

<h4>Países</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <a asp-action="Index" class="btn btn-primary"><i class="fal fa-rotate-left"></i> Regresar</a>
                <button type="submit" class="btn btn-success"><i class="fal fa-save"></i> Guardar</button>
            </div>
        </form>
    </div>
</div>

