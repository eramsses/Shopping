@model Shopping.Models.AddCategoryProductViewModel
@{
    ViewData["Title"] = "Agregar Categoría";
}

<!--Encabezado de Página-->
<div class="main-header d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-4 border-bottom ">
    <div class="col-lg-8">
        <h2>Agregar Categoría</h2>
        <em>Agregar una categoría al producto</em>
    </div>
    <div class="btn-toolbar mb-2 mb-md-0">
        <div class="btn-group me-2">
            <a asp-action="DetailsState" asp-route-id="@Model.ProductId" class="btn btn-primary"><i class="fal fa-arrow-left"></i> Regresar</a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddCategory" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ProductId" />
            <input type="hidden" asp-for="Categories" />
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" asp-items="Model.Categories" class="form-control"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Agregar Categoría" class="btn btn-outline-success" />
                
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
